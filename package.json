{
  "name": "pagezero",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "type": "module",
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=24.6.0",
    "bun": ">=1.2.20"
  },
  "scripts": {
    "build": "react-router build",
    "check": "biome check",
    "check:fix": "biome check --write",
    "check:types": "wrangler types && react-router typegen && tsc",
    "db:clean": "tsx ./packages/db/scripts/clean.ts",
    "db:doctor": "drizzle-kit up && drizzle-kit check",
    "db:drop": "drizzle-kit drop",
    "db:export": "drizzle-kit export > ./packages/db/schema.sql",
    "db:generate": "bun run db:generate:imports && drizzle-kit generate",
    "db:generate:imports": "bun ./packages/db/scripts/schema-imports.ts",
    "db:generate:reset": "rm -rf ./packages/db/migrations && bun run db:generate --name=init",
    "db:init": "tsx ./packages/db/scripts/init.ts",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:remove": "rm -rf ./.wrangler/state/v3/d1",
    "db:seed": "tsx ./packages/db/scripts/seed.ts",
    "db:setup": "bun run db:remove && bun run db:init && bun run db:generate && bun run db:migrate && bun run db:seed",
    "db:studio": "drizzle-kit studio",
    "deploy:production": "CLOUDFLARE_ENV=production bun run build && wrangler deploy",
    "deploy:preview": "CLOUDFLARE_ENV=preview bun run build && wrangler deploy",
    "dev": "NODE_OPTIONS=\"--inspect\" react-router dev",
    "doctor": "bun run check && bun run check:types && bun run test",
    "generate": "tsx ./packages/generate/generate.ts",
    "git:clean": "git branch -l | grep -v 'main' | xargs git branch -D",
    "git:reset": "rm -rf .git && git init .",
    "preview": "NODE_ENV=development bun run build && vite preview",
    "setup": "bun install && bun run setup:env && react-router typegen && playwright install --with-deps chromium && bun run db:setup",
    "setup:env": "echo '# Put your secrets here' > .env",
    "setup:reset": "git clean -fdxq && bun run setup",
    "storybook": "storybook dev -p 6006 --no-open",
    "test": "bun run db:export && vitest run",
    "test:coverage": "bun run db:export && vitest run --coverage",
    "test:e2e": "playwright test --project=e2e",
    "test:e2e:ui": "playwright test --ui --project=e2e",
    "test:smoke": "playwright test --project=smoke",
    "test:watch": "bun run db:export && vitest watch"
  },
  "dependencies": {
    "class-variance-authority": "0.7.1",
    "clsx": "2.1.1",
    "drizzle-orm": "0.44.6",
    "isbot": "5.1.31",
    "lucide-react": "0.545.0",
    "radix-ui": "1.4.3",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "react-router": "7.9.4",
    "tailwind-merge": "3.3.1"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.5",
    "@cloudflare/vite-plugin": "1.13.12",
    "@dotenvx/dotenvx": "1.51.0",
    "@faker-js/faker": "10.0.0",
    "@mdx-js/react": "3.1.1",
    "@mdx-js/rollup": "3.1.1",
    "@playwright/test": "1.56.0",
    "@react-router/dev": "7.9.4",
    "@storybook/addon-docs": "9.1.10",
    "@storybook/addon-themes": "9.1.10",
    "@storybook/react-vite": "9.1.10",
    "@tailwindcss/vite": "4.1.14",
    "@testing-library/jest-dom": "6.8.0",
    "@testing-library/react": "16.3.0",
    "@testing-library/user-event": "14.6.1",
    "@types/better-sqlite3": "7.6.13",
    "@types/bun": "1.2.21",
    "@types/node": "24.7.1",
    "@types/react": "19.2.2",
    "@types/react-dom": "19.2.1",
    "@vitest/coverage-v8": "3.2.4",
    "better-sqlite3": "12.4.1",
    "commander": "14.0.1",
    "drizzle-kit": "0.31.5",
    "fast-glob": "3.3.3",
    "happy-dom": "19.0.2",
    "rollup-plugin-visualizer": "6.0.4",
    "storybook": "9.1.10",
    "tailwindcss": "4.1.14",
    "tsx": "4.20.6",
    "tw-animate-css": "1.4.0",
    "typescript": "5.9.3",
    "vite": "7.1.9",
    "vite-tsconfig-paths": "5.1.4",
    "vitest": "3.2.4",
    "wrangler": "4.42.2"
  },
  "trustedDependencies": [
    "@tailwindcss/oxide",
    "better-sqlite3",
    "esbuild",
    "sharp",
    "workerd"
  ]
}
