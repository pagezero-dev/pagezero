{
  "name": "pagezero",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "type": "module",
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=20.11.1"
  },
  "scripts": {
    "build": "react-router build",
    "db:clean": "tsx ./packages/db/scripts/clean.ts",
    "db:doctor": "drizzle-kit up && drizzle-kit check",
    "db:drop": "drizzle-kit drop",
    "db:export": "drizzle-kit export > ./packages/db/schema.sql",
    "db:generate": "drizzle-kit generate",
    "db:init": "dotenvx run -f .env -- sh -c  'wrangler d1 execute $DB_NAME --local --file=\"./packages/db/init.sql\"'",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:remove": "rm -rf ./.wrangler/state/v3/d1",
    "db:seed": "tsx ./packages/db/scripts/seed.ts",
    "db:setup": "npm run db:remove && npm run db:init && npm run db:generate && npm run db:migrate && npm run db:seed",
    "db:studio": "drizzle-kit studio",
    "dev": "NODE_OPTIONS=\"--inspect\" react-router dev",
    "doctor": "npm run format:check && npm run lint && npm run test:types && npm test",
    "format": "prettier . --write",
    "format:check": "prettier . --check",
    "generate": "tsx ./packages/generate/generate.ts",
    "git:clean": "git branch -l | grep -v 'main' | xargs git branch -D",
    "git:reset": "rm -rf .git && git init .",
    "lint": "eslint .",
    "setup": "npm install && npm run setup:env && react-router typegen && playwright install --with-deps chromium && npm run db:setup",
    "setup:env": "cp .init.env .env",
    "setup:reset": "git clean -fdxq && npm run setup",
    "start": "wrangler pages dev ./build/client --port 3000",
    "storybook": "storybook dev -p 6006 --no-open",
    "test": "npm run db:export && vitest run",
    "test:coverage": "npm run db:export && vitest run --coverage",
    "test:e2e": "playwright test --project=e2e",
    "test:e2e:ui": "playwright test --ui --project=e2e",
    "test:smoke": "playwright test --project=smoke",
    "test:watch": "npm run db:export && vitest watch",
    "test:types": "react-router typegen && tsc"
  },
  "dependencies": {
    "@mdx-js/react": "3.1.0",
    "@react-router/cloudflare": "7.7.1",
