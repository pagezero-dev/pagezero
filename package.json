    "@dotenvx/dotenvx": "1.5.0",
    "@eslint/compat": "1.3.1",
    "@faker-js/faker": "8.4.1",
    "@mdx-js/rollup": "3.0.1",
    "@playwright/test": "1.49.0",
    "@react-router/dev": "7.7.1",
    "@storybook/addon-docs": "9.1.0",
    "@storybook/addon-links": "9.1.0",
