    "radix-ui": "1.4.2",
    "react": "19.1.1",
    "react-dom": "19.1.1",
    "react-router": "7.7.1",
    "swr": "2.3.0",
    "tailwind-merge": "3.3.1"
  },
  "devDependencies": {
